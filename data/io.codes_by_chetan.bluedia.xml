<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.codes_by_chetan.bluedia</id>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <name>Bluedia</name>
  <summary>Control Bluetooth media playback with style</summary>
  
  <description>
    <p>
      A modern GTK-based Bluetooth media controller that provides:
    </p>
    <ul>
      <li>Intuitive media playback controls (play/pause, next, previous)</li>
      <li>Real-time album art display with Spotify integration</li>
      <li>Shuffle and repeat mode controls</li>
      <li>Live progress tracking with time display</li>
      <li>Dark theme support</li>
      <li>Elegant user interface with smooth animations</li>
    </ul>
  </description>

